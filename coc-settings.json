{
  "coc.preferences.formatOnSaveFiletypes": [
    "yaml",
    "json",
    "markdown",
    "pandoc",
    "xml",
    "toml",
    "python",
    "terraform"
  ],
  "prettier.proseWrap": "always",
  "codeLens.enable": true,
  "python.formatting.provider": "black",
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"]
    }
  }
}
