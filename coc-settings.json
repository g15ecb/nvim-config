{
  "coc.preferences.formatOnSaveFiletypes": [
    "yaml",
    "json",
    "markdown",
    "pandoc",
    "xml",
    "toml",
    "python",
    "go",
    "ocaml",
    "rust"
  ],
  "prettier.proseWrap": "always",
  "codeLens.enable": true,
  "python.formatting.provider": "black",
  "rust-analyzer.cargo.autoreload": true,
  "languageserver": {
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml"]
    }
  }
}
